<script src="https://widget.reviews.co.uk/polaris/build.js"></script>

<div class="index-section product-reviews-wrapper">
    <div id="product-reviews">
        <div id="ReviewsWidget"></div>
    </div>
</div>
<script>
  setTimeout(function(){ 

