<div class="page-width">
  
  {%- if section.settings.title != blank -%}
    <div class="section-header">
      <h2 class="section-header__title">{{ section.settings.title | escape }}</h2>
    </div>
  {%- endif -%}

  {%- if section.blocks.size > 0 -%}
    <div class="product-values-slider flickity-values-slider flickity-slider-wrapper">
      {%- for block in section.blocks -%}
        <div class="values-bar__item carousel-cell" {{ block.shopify_attributes }}">
          <div class="values-bar__item-inner">
            {%- if block.settings.link != blank -%}
              <a href="{{ block.settings.link }}" class="values-bar__link">
            {%- endif -%}
            {%- if block.settings.image != blank -%}
            <div class="values-bar__image-background">
              {%- assign img_url = block.settings.image | img_url: '1x1' | replace: '_1x1.', '_{width}x.' -%}
              {{ block.settings.image | img_url: '160x160', scale: 2 | img_tag: block.settings.image.alt, 'values-bar__image' }}
            </div>
            {%- else -%}
              {{ 'logo' | placeholder_svg_tag: 'placeholder-svg' }}
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              <h3>{{ block.settings.text }}</h3>
            {%- endif -%}
            {%- if block.settings.link != blank -%}
              </a>
            {%- endif -%} 
          </div>
        </div>
      {%- endfor -%}
    </div>
  {%- endif -%}
  
</div>


{% schema %}
{
  "name": "TIS Product Values Slider",
  "class": "index-section tis-poduct-values",
  "max_blocks": 12,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "logo_image",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Product Value"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link",
          "info": "Optional"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "TIS Product Values Slider",
      "blocks": [
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        },
        {
          "type": "logo_image"
        }
      ]
    }
  ]
}
{% endschema %}
